<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#384E5C"
              android:layout_width="match_parent"
              android:layout_height="fill_parent">

    <LinearLayout
            android:id="@+id/ll_toolbar"
            android:background="#384E5C"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/toolbar_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/toolbar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:orientation="vertical"
                  android:layout_marginTop="15dp"
                  android:gravity="center"
                  android:layout_weight="2"
                  android:background="#384E5C"
    >
        <ImageView android:layout_width="70dp"
                   android:layout_height="70dp"
                   android:src="@drawable/head_male"
                   android:scaleType="fitXY"
                   android:id="@+id/head_pic"/>
        <!--<com.yz.oa.app.common.AvatarImageView
            android:id="@+id/head_pic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/head_male" />-->

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="姓名"
                  android:id="@+id/tv_name"
                  android:layout_marginTop="6dp"
                  android:textColor="#fff"
                  android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_marginBottom="6dp"
                  android:layout_weight="0.8"
                  android:gravity="center"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv1"
                      android:text="部门"
                      android:textColor="#A9B0B5"
                      android:textSize="14sp"
                      android:layout_below="@+id/img_person"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_department"
                      android:text="技术部"
                      android:layout_marginLeft="10dp"
                      android:textColor="@color/white"
                      android:textSize="18sp"
                      android:layout_below="@+id/img_person"
            />
        </LinearLayout>
        <View android:layout_width="1px"
              android:layout_height="match_parent"
              android:background="#cccccc"
              android:alpha="0.1"
        ></View>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="horizontal">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv2"
                      android:text="工号"
                      android:textColor="#A9B0B5"
                      android:textSize="14sp"
                      android:layout_below="@+id/img_person"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_workNum"
                      android:text="187"
                      android:layout_marginLeft="10dp"
                      android:textColor="@color/white"
                      android:textSize="18sp"
                      android:layout_below="@+id/img_person"
            />
        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#cccccc"
          android:alpha="0.1"
          android:id="@+id/view_line"
    ></View>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="0dp">
    <ListView
            android:id="@+id/lv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/imaginary_line"
            android:dividerHeight="1px"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:scrollbars="none"
            android:footerDividersEnabled="false">
    </ListView>
    </LinearLayout>
</LinearLayout>